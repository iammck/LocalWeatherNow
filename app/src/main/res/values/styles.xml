<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TemperatureTheme" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/temperature_size</item>
    </style>

    <style name="LargeTextTheme" parent="TextAppearance.AppCompat.Large">
        <item name="android:padding">@dimen/large_text_padding_size</item>
    </style>

    <style name="MediumTextTheme" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="SmallTextTheme" parent="TextAppearance.AppCompat.Small">
        <item name="android:padding">@dimen/small_text_padding_size</item>
    </style>


</resources>
