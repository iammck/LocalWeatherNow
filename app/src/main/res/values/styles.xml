<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="LargeTextTheme" parent="TextAppearance.AppCompat.Large">
        <item name="android:paddingLeft">@dimen/large_text_left_padding_size</item>
        <item name="android:paddingRight">@dimen/large_text_right_padding_size</item>
        <item name="android:paddingTop">@dimen/large_text_top_padding_size</item>
        <item name="android:paddingBottom">@dimen/large_text_bottom_padding_size</item>
    </style>

    <style name="TemperatureTheme" parent="LargeTextTheme">
        <item name="android:textSize">@dimen/temperature_text_size</item>
        <item name="android:paddingLeft">@dimen/temperature_text_left_padding_size</item>
        <item name="android:paddingRight">@dimen/temperature_text_right_padding_size</item>
        <item name="android:paddingTop">@dimen/temperature_text_top_padding_size</item>
        <item name="android:paddingBottom">@dimen/temperature_text_bottom_padding_size</item>
    </style>

    <style name="MediumTextTheme" parent="TextAppearance.AppCompat.Medium">
        <item name="android:paddingLeft">@dimen/medium_text_left_padding_size</item>
        <item name="android:paddingRight">@dimen/medium_text_right_padding_size</item>
        <item name="android:paddingTop">@dimen/medium_text_top_padding_size</item>
        <item name="android:paddingBottom">@dimen/medium_text_bottom_padding_size</item>
    </style>

    <style name="SmallTextTheme" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingLeft">@dimen/small_text_left_padding_size</item>
        <item name="android:paddingRight">@dimen/small_text_right_padding_size</item>
        <item name="android:paddingTop">@dimen/small_text_top_padding_size</item>
        <item name="android:paddingBottom">@dimen/small_text_bottom_padding_size</item>
        <item name="android:layout_margin">0dp</item>
    </style>


    <style name="XSmallTextTheme" parent="SmallTextTheme">
        <item name="android:textSize">@dimen/xtra_small_text_size</item>
        <item name="android:paddingLeft">@dimen/xtra_small_text_left_padding_size</item>
        <item name="android:paddingRight">@dimen/xtra_small_text_right_padding_size</item>
        <item name="android:paddingTop">@dimen/xtra_small_text_top_padding_size</item>
        <item name="android:paddingBottom">@dimen/xtra_small_text_bottom_padding_size</item>
    </style>

    <style name="main_layout_theme">
        <item name="android:layout_marginLeft">@dimen/main_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/main_layout_margin_right</item>
        <item name="android:layout_marginTop">@dimen/main_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/main_layout_margin_bottom</item>
    </style>


</resources>
